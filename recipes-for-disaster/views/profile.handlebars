<div class="row">
  <div class="col-auto">
    <h2 class="profile-title">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3 class="profile-title">Create a New Recipe:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">recipe name:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc-two">description:</label>
        <textarea class="form-input" id="project-desc-two" name="project-desc-two"></textarea>
      </div>
      <div class="form-group">
        <label for="project-desc">ingredient list:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn">Create</button>
      </div>
    </form>
  </div>


  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3 class="profile-title">Current Recipes:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a id="project-names" href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
